<div>
    <div class="page-header">
        <h1>Create a new article</h1>
    </div>
    
<%= form_for @article, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
   <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
 <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "60x12"%>
  </div>
  <%= f.submit "Create" %>
<% end %>
</div>